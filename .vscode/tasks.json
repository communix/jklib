{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "./src/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "./src/build"
            },
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake -G \"MinGW Makefiles\" CMakeLists.txt",
            "options": {
                "cwd": "./src/build"
            },
        },
        {
            "label": "cmake clean",
            "type": "shell",
            "command": "rm -rf CMakeFiles CMakeCache.txt cmake_install.cmake install_manifest.txt libjk.a Makefile",
            "options": {
                "cwd": "./src/build"
            },
        },
        {
            "label": "run unit test",
            "type": "shell",
            "command": "./unit_test.exe",
            "options": {
                "cwd": "./src/unit_test"
            },
        },
    ]
}